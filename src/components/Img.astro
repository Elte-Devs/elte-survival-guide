---
import { Image } from 'astro:assets'

interface Props {
  src: ImageMetadata
  width: number
}

const { src, width } = Astro.props
---

<div>
  <Image
    style={'margin-top: 34px;'}
    class="img"
    src={src}
    width={width}
    alt={src.src.split('/').pop()?.split('.').shift()}
  />
</div>

<style>
  div {
    display: flex;
    justify-content: center;
    margin-bottom: 50px;
  }
</style>
